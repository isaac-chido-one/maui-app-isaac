<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppIsaac.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppIsaac"
    xmlns:vi="clr-namespace:MauiAppIsaac.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppIsaac">

    <ShellContent
        Title="Listar"
        ContentTemplate="{DataTemplate vi:ListadoAlumnosView}"
        Route="ListadoAlumnosView" />
    <ShellContent
        Title="Nuevo alumno"
        ContentTemplate="{DataTemplate vi:AlumnoView}"
        Route="AlumnoView" />

</Shell>
