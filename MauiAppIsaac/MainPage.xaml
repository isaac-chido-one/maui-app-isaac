<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiAppIsaac.ViewModels"
             x:DataType="vm:TestViewModel"
             x:Class="MauiAppIsaac.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Background="Orange" Text="{Binding Count}"></Label>
            <Label Text="{Binding Text}"></Label>
            <Button Text="Cambiar texto" Command="{Binding CambiarTextoCommand}"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
